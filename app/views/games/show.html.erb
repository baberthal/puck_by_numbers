<p id="notice"><%= notice %></p>

<table>
  <thead>
    <tr>
      <th>Team</th>
      <th>Final Score</th>
      <th>Corsi For</th>
      <th>Corsi Against</th>
      <th>Fenwick For</th>
      <th>Fenwick Against</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @game.game_summary do |game_summary| %>
      <tr>
        <td><%= game_summary.fscore_home %></td>
        <td><%= game_summary.fscore_away %></td>
        <td><%= game_summary.home_corsi_for_tot %></td>
        <td><%= game_summary.away_corsi_for_tot %></td>
        <td><%= game_summary.home_fenwick_for_tot %></td>
        <td><%= game_summary.away_fenwick_for_tot %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Back', games_path %>
