<p id="notice"><%= notice %></p>

<div class="container">

  <div class="panel panel-default player-panel">
    <div class="panel-heading">
      <div class="row">
        <ul class="nav nav-tabs pull-left">
          <li role="presentation"><a href="#" data-toggle="tab" role="tab">SKATERS</a></li>
          <li role="presentation"><a href="#" data-toggle="tab" role="tab">GOALIES</a></li>
        </ul>
        <div class="pull-right search-box">
          <%= form_tag players_path, :method => 'get', :id => "players_search", :remote => true do  %>
            <%= hidden_field_tag :direction, params[:direction] %>
            <%= hidden_field_tag :sort, params[:sort] %>
            <p>
              <%= text_field_tag :search, params[:search] %>
              <%= submit_tag "Search", :last_name => nil, class: "btn btn-default search-button" %>
            </p>
          <% end %>
        </div>
      </div>
    </div>
    <div id="players"><%= render 'players' %></div>
  </div>

</div>
