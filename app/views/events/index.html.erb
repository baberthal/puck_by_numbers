<p id="notice"><%= notice %></p>

<h1>Listing Events</h1>

<table>
  <thead>
    <tr>
      <th>Event number</th>
      <th>Period</th>
      <th>Seconds</th>
      <th>Event type</th>
      <th>Event team</th>
      <th>Shot type</th>
      <th>Home score</th>
      <th>Away score</th>
      <th>Event length</th>
      <th>Home skaters</th>
      <th>Away skaters</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.event_number %></td>
        <td><%= event.period %></td>
        <td><%= event.seconds %></td>
        <td><%= event.event_type %></td>
        <td><%= event.event_team %></td>
        <td><%= event.description %></td>
        <td><%= event.home_score %></td>
        <td><%= event.away_score %></td>
        <td><%= event.event_length %></td>
        <td><%= event.home_skaters %></td>
        <td><%= event.away_skaters %></td>
				<td><%= link_to 'Show', event %></td>
      </tr>
    <% end %>
    <% @events.player.each do |player| %>
      <tr>
        <td><%= player.a1 %></td>
      </tr>
    <% end %>
		</tbody>
</table>

<br>

<%= link_to 'New Event', new_event_path %>
