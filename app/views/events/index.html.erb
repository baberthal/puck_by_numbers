<p id="notice"><%= notice %></p>

<h1>Listing Events</h1>

<table>
  <thead>
    <tr>
      <th>Event number</th>
      <th>Period</th>
      <th>Seconds</th>
      <th>Event type</th>
      <th>Event team</th>
      <th>Shot type</th>
      <th>Home score</th>
      <th>Away score</th>
      <th>Event length</th>
      <th>Home skaters</th>
      <th>Away skaters</th>
			<th>Away P1</th>
			<th>Away P2</th>
			<th>Away P3</th>
			<th>Away P4</th>
			<th>Away P5</th>
			<th>Away P6</th>
			<th>Home P1</th>
			<th>Home P2</th>
			<th>Home P3</th>
			<th>Home P4</th>
			<th>Home P5</th>
			<th>Home P6</th>
			<th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.event_number %></td>
        <td><%= event.period %></td>
        <td><%= event.seconds %></td>
        <td><%= event.event_type %></td>
        <td><%= event.event_team.name if event.event_team %></td>
        <td><%= event.description %></td>
        <td><%= event.home_score %></td>
        <td><%= event.away_score %></td>
        <td><%= event.event_length %></td>
        <td><%= event.home_skaters %></td>
        <td><%= event.away_skaters %></td>
				<td><%= link_to event.a1.last_name, player_path(:id => event.a1) if event.a1 %>
				<td><%= link_to event.a2.last_name, player_path(:id => event.a2) if event.a2 %>
				<td><%= link_to event.a3.last_name, player_path(:id => event.a3) if event.a3 %>
				<td><%= link_to event.a4.last_name, player_path(:id => event.a4) if event.a4 %>
				<td><%= link_to event.a5.last_name, player_path(:id => event.a5) if event.a5 %>
				<td><%= link_to event.a6.last_name, player_path(:id => event.a6) if event.a6 %>
				<td><%= link_to event.h1.last_name, player_path(:id => event.h1) if event.h1 %>
				<td><%= link_to event.h2.last_name, player_path(:id => event.h2) if event.h2 %>
				<td><%= link_to event.h3.last_name, player_path(:id => event.h3) if event.h3 %>
				<td><%= link_to event.h4.last_name, player_path(:id => event.h4) if event.h4 %>
				<td><%= link_to event.h5.last_name, player_path(:id => event.h5) if event.h5 %>
				<td><%= link_to event.h6.last_name, player_path(:id => event.h6) if event.h6 %>
				<td><%= link_to 'Show', event %></td>
      </tr>
    <% end %>
		</tbody>
</table>

