<%= grid(@player_grid) do |g|

	g.column name: 'Name' do |player|
		link_to(player.first_name.to_s.titleize + " " + player.last_name.to_s.titleize)
	end

	g.column name: "Pos", attribute: 'position', class: 'col-xs-1'

	g.column name: "Team", attribute: 'team_id' do |player|
		player.team.name.to_s.titleize + " " + player.team.nickname unless player.team.nil?
	end

end -%>
