<p id="notice"><%= notice %></p>

<h1>All Players</h1>

<table>
  <thead>
		<tr>
			<th>First Name</th>
			<th>Last Name</th>
			<th>Position</th>
			<th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @players.each do |player| %>
      <tr>
        <td><%= player.first_name %></td>
        <td><%= player.last_name %></td>
        <td><%= player.position %></td>
        <td><%= link_to 'Show', player %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Player', new_player_path %>
